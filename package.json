{
    "name": "formjs-plugin",
    "title": "formJS",
    "description": "JavaScript Form Validation. Made Easy",
    "version": "6.0.0",
    "type": "module",
    "jsdelivr": "dist/formjs.min.js",
    "unpkg": "dist/formjs.min.js",
    "main": "dist/formjs.js",
    "module": "dist/formjs-esm.js",
    "jsnext:main": "dist/formjs-esm.js",
    "exports": {
